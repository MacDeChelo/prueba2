package velerosformah;
import java.util.ArrayList;
import java.util.Scanner;

public class VelerosFormaH {
    public static void main(String[] args) {
        ArrayList<Datos> veleros = new ArrayList<>();
        Scanner sc = new Scanner(System.in);
        int opcion;

        do {
            System.out.println("\n--- Menú de Veleros ---");
            System.out.println("1. Ingresar Velero");
            System.out.println("2. Mostrar Precio Final");
            System.out.println("3. Aplicar Ajuste de Precio");
            System.out.println("4. Contar Veleros de Crucero");
            System.out.println("5. Salir");
            System.out.print("Seleccione una opción: ");
            opcion = sc.nextInt();
            sc.nextLine(); // limpiar buffer

            switch (opcion) {
                case 1:
                    System.out.print("Tipo de velero (Crucero/Regata): ");
                    String tipo = sc.nextLine();
                    if ("Crucero".equalsIgnoreCase(tipo)) {
                        System.out.print("Codigo: "); String c = sc.nextLine();
                        System.out.print("Nombre: "); String n = sc.nextLine();
                        System.out.print("Precio Base: "); double pb = sc.nextDouble(); sc.nextLine();
                        System.out.print("Marca: "); String m = sc.nextLine();
                        System.out.print("Modelo: "); String mo = sc.nextLine();
                        System.out.print("Año Fabricación: "); int af = sc.nextInt(); sc.nextLine();
                        System.out.print("Tipo Crucero (oceánico/costero): "); String tc = sc.nextLine();

                        // Validar duplicado
                        boolean existe = false;
                        for (Datos v : veleros) {
                            if (v.getCodigo().equals(c)) {
                                existe = true;
                                break;
                            }
                        }
                        if (existe) {
                            System.out.println("Velero ya existe con el mismo código.");
                        } else {
                            veleros.add(new VeleroCrucero(c, n, pb, m, mo, af, tc));
                            System.out.println("Velero Crucero agregado.");
                        }

                    } else if ("Regata".equalsIgnoreCase(tipo)) {
                        System.out.print("Codigo: "); String c = sc.nextLine();
                        System.out.print("Nombre: "); String n = sc.nextLine();
                        System.out.print("Precio Base: "); double pb = sc.nextDouble(); sc.nextLine();
                        System.out.print("Marca: "); String m = sc.nextLine();
                        System.out.print("Modelo: "); String mo = sc.nextLine();
                        System.out.print("Eslora (pies): "); double e = sc.nextDouble(); sc.nextLine();
                        System.out.print("Tipo Regata (ligera/océánica): "); String tr = sc.nextLine();

                        boolean existe = false;
                        for (Datos v : veleros) {
                            if (v.getCodigo().equals(c)) {
                                existe = true;
                                break;
                            }
                        }
                        if (existe) {
                            System.out.println("Velero ya existe con el mismo código.");
                        } else {
                            veleros.add(new VeleroRegata(c, n, pb, m, mo, e, tr));
                            System.out.println("Velero Regata agregado.");
                        }

                    } else {
                        System.out.println("Tipo de velero inválido.");
                    }
                    break;

                case 2:
                    System.out.print("Ingrese código del velero: ");
                    String cod = sc.nextLine();
                    boolean encontrado = false;
                    for (Datos v : veleros) {
                        if (v.getCodigo().equals(cod)) {
                            double precioFinal;
                            if (v instanceof VeleroCrucero) {
                                precioFinal = ((VeleroCrucero) v).precioFinal();
                            } else {
                                precioFinal = ((VeleroRegata) v).precioFinal();
                            }
                            System.out.printf("Precio Base: $%,.0f, Precio Final: $%,.0f%n", v.getPrecioBase(), precioFinal);

                            encontrado = true;
                            break;
                        }
                    }
                    if (!encontrado) {
                        System.out.println("Velero no encontrado.");
                    }
                    break;

                case 3:
                    for (Datos v : veleros) {
                        if (v instanceof VeleroCrucero) {
                            ((VeleroCrucero) v).ajustePrecio();
                        } else if (v instanceof VeleroRegata) {
                            ((VeleroRegata) v).ajustePrecio();
                        }
                    }
                    System.out.println("Ajuste de precio aplicado.");
                    break;

                case 4:
                    int count = 0;
                    for (Datos v : veleros) {
                        if (v instanceof VeleroCrucero) {
                            VeleroCrucero vc = (VeleroCrucero) v;
                            if ("oceánico".equalsIgnoreCase(vc.getTipoCrucero()) && "Jeanneau".equalsIgnoreCase(vc.getMarca())) {
                                count++;
                            }
                        }
                    }
                    System.out.println("Cantidad de veleros oceánicos de marca Jeanneau: " + count);
                    break;

                case 5:
                    System.out.println("Saliendo...");
                    break;

                default:
                    System.out.println("Opción inválida.");
            }

        } while (opcion != 5);

        sc.close();
    }
}
